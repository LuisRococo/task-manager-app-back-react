<% presenter = TaskListPresenter.new(@task_list) %>

<div class="container mb-5">
    <%= render 'pg_header', presenter.show_page_header %>

    <div class="bg-dark rounded p-4 my-4 text-white">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <p class="h5 m-0">User</p>
                <p class="m-0"><%= current_user.full_name %></p>
            </div>
            <div>
                <%= link_to 'Return to task lists', board_task_lists_path(@task_list.board), class: 'btn btn-primary' %>
                <%= link_to 'Create task', new_task_list_task_path(@task_list), class: 'btn btn-success' %>
            </div>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-12 col-lg-8">
            <%= render 'task_list', task_list: @task_list %>
        </div>
    </div>
</div>
