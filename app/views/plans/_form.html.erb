<%= form_with model: @plan do |form| %>
    <div class="form-group mb-3">
        <%= form.label :title%>
        <%= form.text_field :title, class: 'form-control', placeholder: 'Enter a title' %>
    </div>

    <div class="form-group mb-3">
        <%= form.label :price%>
        <%= form.number_field :price, class: 'form-control', placeholder: 'Enter a price', in: 1.0..10000.0, step: 0.01 %>
    </div>

    <div class="form-group mb-3">
        <%= form.label :member_quantity%>
        <%= form.number_field :member_quantity, class: 'form-control', placeholder: 'Enter a member quantity', in: 1..10000 %>
    </div>

    <div class="form-group mb-3">
        <%= form.label :time_months%>
        <%= form.number_field :time_months, class: 'form-control', placeholder: 'Enter a renewal time in months', in: 1..256 %>
    </div>

    <div class="d-flex justify-content-end mt-5">
        <%= link_to plans_path  do %>
            <button class='btn btn-primary me-2'>Return</button>
        <% end %>
        <%= form.submit class: 'btn btn-success' %>
    </div>
<% end %>
