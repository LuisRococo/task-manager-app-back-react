<div class="container mb-5">
    <%= render 'pg_header', index_header %>

    <div class="bg-dark rounded p-4 my-4 text-white">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <p class="h5 m-0">User</p>
                <p class="m-0"><%= current_user.full_name %></p>
            </div>
            <%= link_to 'Create Plan', new_plan_path, class: 'btn btn-success' %>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <% @plans.each do |plan| %>
            <div class="col-12 col-lg-8">
                <%= render 'plan_card', plan: plan %>
            </div>
        <% end %>
    </div>
</div>
