<div class="container mb-5">
    <%= render 'pg_header', team_index_header_page %>

    <div class="bg-dark rounded p-4 my-4 text-white">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <p class="h5 m-0">User</p>
                <p class="m-0"><%= current_user.full_name %></p>
            </div>
            <%= link_to 'Add user', new_user_team_path(current_user), class: 'btn btn-success' %>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-12 col-lg-8">
            <%= render 'team_card', team: @team %>
        </div>
    </div>
</div>
