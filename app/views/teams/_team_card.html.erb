<div class="card">
    <div class="card-header">
        <p class="m-0">Team members</p>
    </div>
    <div class="card-body">
        <% if @team.count == 0 %>
            <div class="bg-light py-3 px-3 rounded mb-3">
                <p class="h3 text-center">There are no team members</p>
            </div>
        <% end %>

        <% @team.each do |user| %>
            <div class="bg-light py-3 px-3 rounded mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-0"><%= user.full_name %></p>
                        <p class="m-0"><%= user.email %></p>
                    </div>
                    <%= link_to 'See user', user_path(user), class: 'btn btn-primary' %>
                </div>
            </div>
        <% end %>
    </div>
</div>
