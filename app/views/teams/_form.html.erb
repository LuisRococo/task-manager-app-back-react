<%= form_with url: user_teams_path(current_user), method: :post do |form| %>
    <div class="form-group mb-3">
        <%= form.label :email%>
        <%= form.text_field :email, class: 'form-control', placeholder: 'Enter the email' %>
    </div>

    <div class="row">
        <div class="col-12 col-md-6">
            <div class="form-group mb-3">
                <%= form.label :first_name%>
                <%= form.text_field :first_name, class: 'form-control', placeholder: 'Enter the first name' %>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group mb-3">
                <%= form.label :last_name%>
                <%= form.text_field :last_name, class: 'form-control', placeholder: 'Enter the last name' %>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-5">
        <%= form.submit class: 'btn btn-success' %>
    </div>
<% end %>
