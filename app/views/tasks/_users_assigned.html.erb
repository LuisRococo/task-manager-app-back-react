<div class="card">
    <div class="card-header">
        <p class="m-0">Users assigned</p>
    </div>
    <div class="card-body">
        <% if @task.users.count == 0 %>
            <div class="bg-light py-3 px-3 rounded mb-3">
                <p class="h3 text-center">There are no users assigned</p>
            </div>
        <% end %>

        <% @task.users.each do |user| %>
            <div class="bg-light py-3 px-3 rounded mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-0"><%= user.full_name %></p>
                        <p class="m-0"><%= user.email %></p>
                    </div>
                    <div>
                        <%= link_to 'delete',
                                    task_user_path(task_user_id_from_user_task(user, @task)),
                                    class: 'btn btn-danger me-2',
                                    data: {confirm: "Do you really want to delete"},
                                    method: :delete %>
                        <%= link_to 'see', user_path(user), class: 'btn btn-primary' %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
