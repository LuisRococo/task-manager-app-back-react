<%= form_with model: task_form_models do |form| %>
    <div class="form-group mb-3">
        <%= form.label :title%>
        <%= form.text_field :title, class: 'form-control', placeholder: 'Enter a title' %>
    </div>

    <div class="form-group mb-3">
        <%= form.label :task_list_id%>
        <%= form.collection_select :task_list_id,
                        task_form_task_lists,
                        :id,
                        :title,
                        {},
                        class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
        <%= form.label :content %>
        <%= form.rich_text_area :content %>
    </div>

    <div class="d-flex justify-content-end mt-5">
        <%= link_to 'Return', :back, class: 'btn btn-primary me-2' %>
        <%= form.submit class: 'btn btn-success' %>
    </div>
<% end %>
