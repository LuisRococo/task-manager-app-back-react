<div class="container mb-5">
    <%= render 'pg_header', task_index_header(@task_list) %>

    <div class="bg-dark rounded p-4 my-4 text-white">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <p class="h5 m-0">Task list:</p>
                <p class="m-0"><%= @task_list.title %></p>
            </div>
            <div>
                <%= link_to 'Go to board', board_path(@task_list.board), class: 'btn btn-primary ma-2' %>
                <%= link_to 'Create task', new_task_list_task_path(@task_list), class: 'btn btn-success' %>
            </div>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
         <% @tasks.each do |task| %>
            <div class="col-12 col-lg-8">
                <%= render 'task', task: task %>
            </div>
        <% end %>
    </div>
</div>
