<div class="container my-5">
  <h2 class="text-center">Edit User</h2>
  <p class="text-center"><%= @user.full_name %></p>

  <%= render 'model_errors', obj: @user %>

  <hr class="my-5">

  <div class="row d-flex justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <%= form_with(model: @user) do |f| %>

        <div class="row">
          <div class="form-group mb-3 col-12 col-md-6">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", class: 'form-control' %>
          </div>

          <div class="form-group mb-3 col-12 col-md-6">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control' %>
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="d-flex justify-content-end mt-5">
          <%= f.submit "Edit", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>

</div>
